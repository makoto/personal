{% block content %}
	<section class="home" id="intro">
	<div class="container">
		<div class="eight columns alpha">
			<h1 class="intro"><span class="typer" contenteditable="true"></span><noscript>Tom Cavill is a product designer in London.</noscript></h1>
		</div>
	</div>
	</section>

		<section class="about" id="about">
			<div class="container">
				<div class="row clearfix">
					<div class="eight columns alpha">
						{{ 2 | lorem_ipsum:'p' }}
					</div>
					<div class="five columns offset-by-three omega">
						<ul class="work-list">
						{% collection "work" %}
						<!-- TODO: make alpha / omega -->
							{% for project in collection.items %}
							<!-- todo: sort by personal or client -->
							<li>
								{{ project.title }}
							</li>
							{% endfor %}
						{% endcollection %}
						</ul>
					</div>
				</div>

			</div>
		</section>

	<article class="portfolio" id="work">
		{% collection "work" %}
			{% include "portfolio" with collection.items %}
		{% endcollection %}
	</article>

		<div id="links" class="hidden">
			<h1>Contact</h1>
			{{ 2 | lorem_ipsum:'p' }}
		</section>
{% endblock %}

{% block scripts %}

	{{ "jquery.typer.js" | asset_url | script_tag }}
	{{ "jquery.pageslide.js" | asset_url | script_tag }}
	{{ "jquery.waypoints.min.js" | asset_url | script_tag }}
	{{ "jquery.lettering-0.6.min.js" | asset_url | script_tag }}

{% endblock %}